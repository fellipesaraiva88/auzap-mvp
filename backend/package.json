{
  "name": "auzap-backend",
  "version": "1.0.0",
  "description": "AuZap Backend - WhatsApp Automation with AI",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "worker": "node dist/workers/index.js",
    "test": "dotenv -e .env.test -- jest",
    "test:watch": "dotenv -e .env.test -- jest --watch",
    "test:coverage": "dotenv -e .env.test -- jest --coverage",
    "test:crud": "dotenv -e .env.test -- jest tests/crud.test.ts",
    "test:auth": "dotenv -e .env.test -- jest tests/auth.test.ts",
    "test:queue": "dotenv -e .env.test -- jest tests/queue.test.ts",
    "test:verbose": "dotenv -e .env.test -- jest --verbose",
    "test:redis": "ts-node src/scripts/test-redis-bullmq.ts",
    "test:worker": "ts-node src/scripts/validate-message-worker.ts",
    "test:worker-logs": "ts-node src/scripts/test-worker-logs.ts",
    "test:routing": "ts-node src/scripts/test-routing.ts",
    "routing:status": "ts-node src/scripts/show-routing-status.ts",
    "routing:demo": "ts-node src/scripts/demo-routing.ts",
    "upstash:info": "ts-node src/scripts/get-upstash-connection.ts",
    "whatsapp:send": "ts-node scripts/send-test-message.ts",
    "whatsapp:inspect": "ts-node scripts/inspect-instance.ts",
    "whatsapp:simulate": "ts-node scripts/simulate-message.ts",
    "whatsapp:dashboard": "ts-node scripts/whatsapp-dashboard.ts",
    "whatsapp:health": "ts-node scripts/health-check.ts",
    "whatsapp:list": "ts-node scripts/list-instances.ts",
    "test:flow": "dotenv -e .env -- ts-node src/scripts/test-complete-flow.ts"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@supabase/supabase-js": "^2.45.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.18.8",
    "@upstash/redis": "^1.35.4",
    "@whiskeysockets/baileys": "^6.7.8",
    "bullmq": "^5.28.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "cron": "^3.1.7",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "morgan": "^1.10.0",
    "openai": "^4.73.0",
    "pino": "^9.13.0",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "typescript": "^5.9.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.1.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0"
  }
}
