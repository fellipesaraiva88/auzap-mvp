# Auto detect text files and normalize line endings to LF on checkin
* text=auto eol=lf

# Explicitly declare text files you want to always be normalized and converted to LF
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sql text eol=lf
*.sh text eol=lf
*.env.example text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.zip binary
*.gz binary
*.tar binary
*.mp4 binary
*.mp3 binary
*.wav binary

# Git LFS patterns (for large files if needed in the future)
# *.psd filter=lfs diff=lfs merge=lfs -text
# *.ai filter=lfs diff=lfs merge=lfs -text

# Archive files
*.7z binary
*.jar binary
*.rar binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore
