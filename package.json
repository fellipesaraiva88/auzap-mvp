{
  "name": "auzap-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "AuZap - WhatsApp Automation with Dual AI",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently -n \"api,worker,web\" -c \"blue,yellow,green\" \"npm:dev:backend\" \"npm:dev:worker\" \"npm:dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:worker": "cd backend && npm run worker",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build --workspaces",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test --workspaces",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "playwright:install": "playwright install --with-deps",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint --workspaces -- --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "typecheck": "npm run typecheck --workspaces",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "cd backend && npm run migrate",
    "db:seed": "cd backend && npm run seed",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules backend/dist frontend/dist",
    "reset": "npm run clean && npm install",
    "prepare": "husky || true",
    "deploy:check": "bash scripts/deploy-checklist.sh",
    "deploy:security": "bash scripts/security-check.sh",
    "deploy:smoke": "bash scripts/smoke-test.sh",
    "deploy:validate": "bash scripts/validate-production.sh",
    "deploy:full": "npm run deploy:security && npm run deploy:check && npm run deploy:smoke"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.55.1",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "playwright": "^1.55.1",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
